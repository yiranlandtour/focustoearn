<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <padding android:top="1px" android:left="1px" android:right="1px" android:bottom="1px"/>
            <solid android:color="#cd94ed" />
            <corners android:radius="40dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <padding android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp"/>
            <solid android:color="#ffffffff" />
            <corners android:radius="40dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#9e5bd5"
                android:endColor="#cd94ed"
                android:useLevel="true" />
            <corners android:radius="40dp" />
        </shape>
    </item>

</layer-list>