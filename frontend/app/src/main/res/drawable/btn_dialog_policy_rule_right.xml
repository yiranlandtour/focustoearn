<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/dark_green"
                android:endColor="@color/light_green"
                android:useLevel="true"
                android:angle="45"
                />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" />
        </shape>

    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="@color/light_green"
                android:endColor="@color/dark_green"
                android:useLevel="true"
                android:angle="45"
                />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" />
        </shape>
    </item>
</selector>