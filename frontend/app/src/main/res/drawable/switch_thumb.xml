<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape
            android:shape="oval">
            <solid android:color="#f6f6f6" />
            <size
                android:width="25dp"
                android:height="25dp" />
        </shape>
    </item>
    <item android:state_checked="false" >
        <shape
            android:shape="oval">
            <solid android:color="#c4c4c4" />
            <size
                android:width="25dp"
                android:height="25dp" />
        </shape>
    </item>
</selector>